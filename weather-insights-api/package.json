{
  "name": "weather-insights-api",
  "version": "0.0.1",
  "description": "API RESTful para consulta de dados meteorológicos com cache Redis e histórico persistente. Integração com OpenWeatherMap API.",
  "author": "Gilvania",
  "private": true,
  "license": "UNLICENSED",
  "keywords": [
    "weather",
    "api",
    "nestjs",
    "openweathermap",
    "redis",
    "prisma",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gilvania/weather-insights-api"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
